{
  "extends": "@syner/ts-config/base",
  "compilerOptions": {
    // Build handled by tsup - this config is only for type checking and IDE
    "incremental": false,
    "types": ["@types/bun"],
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@syner/cli/*": ["packages/cli/*"]
    }
  },
  "include": ["index.ts", "packages/**/*"],
  "exclude": ["node_modules/**/*", "dist/**/*", "tsup.config.ts"]
}
