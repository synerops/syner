{
  "name": "syner",
  "description": "syner OS: the agentic operating system implemented with syner SDK",
  "version": "0.0.0-dev.1",
  "type": "module",
  "private": false,
  "sideEffects": false,
  "license": "AGPL-3.0-only",
  "prettier": "@syner/prettier-config",
  "author": {
    "name": "Ronny Badilla",
    "email": "info@rbadillap.dev",
    "url": "https://rbadillap.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/synerops/syner.git",
    "directory": "apps/syner"
  },
  "homepage": "https://github.com/synerops/syner#readme",
  "bugs": {
    "url": "https://github.com/synerops/syner/issues"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "syner": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build index.ts --outdir dist",
    "dev": "bun --watch --bun index.ts dev --port 3000",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --max-warnings 0",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "format:fix": "prettier --write . --ignore-path ../../.gitignore",
    "clean": "git clean -xdf .cache .vercel .turbo dist node_modules"
  },
  "dependencies": {
    "@vercel/build-utils": "^12.2.3",
    "commander": "^12.0.0"
  },
  "peerDependencies": {
    "ai": "catalog:aisdk",
    "zod": "catalog:aisdk"
  },
  "devDependencies": {
    "@syner/eslint-config": "workspace:*",
    "@syner/prettier-config": "workspace:*",
    "@syner/ts-config": "workspace:*",
    "@types/bun": "^1.3.1",
    "eslint": "^9.34.0",
    "prettier": "catalog:",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  }
}
